@{
    ViewBag.Title = "Moderate";
}

@section css{
    @Styles.Render("~/Content/dataTables")
}

<div class="form-horizontal" id="loginDiv" style="width:50%">
    <h4>Need authorization</h4>
    <hr />
    <div class="form-group">
        <label class="control-label col-md-2">Name</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="name" placeholder="Enter name" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Password</label>
        <div class="col-md-10">
            <input type="password" class="form-control" id="password" placeholder="Enter password"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="submit" type="submit" value="Login" class="btn btn-default" style="width:100%" />
            <div class="alert alert-danger" role="alert" id="errorAuth" style="display: none; margin-top: 15px;"></div>
        </div>
    </div>
</div>

<div id="TableDiv" style="display: none">
    <h2>Moderate</h2>
    <br />
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover" id="moderateTable">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Tags
                        </th>
                        <th>
                            Latitude
                        </th>
                        <th>
                            Longitude
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Delete
                        </th>
                        <th>
                            Approve
                        </th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <button id="logOut" type="button" class="btn btn-default">Logout</button>
</div>

<div class="modal fade" id="confirmAppModalWin">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h2 class="modal-title">Confirm your choice</h2>
            </div>
            <div id="modalBodyId" class="modal-body">
                Do you want to approve this place?
            </div>
            <div class="modal-footer">
                <button id="approvePlace" type="button" class="btn btn-primary">Approve a place</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmDelModalWin">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h2 class="modal-title">Confirm your choice</h2>
            </div>
            <div id="modalBodyId" class="modal-body">
                Do you want to delete this place?
            </div>
            <div class="modal-footer">
                <button id="deletePlace" type="button" class="btn btn-primary">Delete a place</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/Content/scripts/moderate.js")
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/bundles/jqueryval")
}
